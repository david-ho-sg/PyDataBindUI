uniform sampler2D tex0;
varying mediump vec2 TexCoord0;

uniform mediump vec4 PixelKernelWeight[13];

void GBH()
{
	mediump vec4 color = vec4( 0.0, 0.0, 0.0, 0.0 );
	for( int i = 0; i < 13; i++ ) {
		color = color+texture2D( tex0, vec2( TexCoord0.x+PixelKernelWeight[i].x, TexCoord0.y ) )*PixelKernelWeight[i].z;
	}
	gl_FragColor = vec4( color.xyz, 1.0 );
}

void GBV()
{
	mediump vec4 color = vec4( 0.0, 0.0, 0.0, 0.0 );
	for( int i = 0; i < 13; i++ ) {
		color = color+texture2D( tex0, vec2( TexCoord0.x, TexCoord0.y+PixelKernelWeight[i].y) )*PixelKernelWeight[i].z;
	}
	gl_FragColor = vec4( color.xyz, 1.0 );
}