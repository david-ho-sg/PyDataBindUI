precision lowp float;

uniform sampler2D samplerTex0;

uniform lowp vec4 screen_color;

varying mediump vec2 TexCoord0;

void ps_main()
{
	vec4 org_clr = texture2D(samplerTex0, TexCoord0);
	vec3 new_color = mix(org_clr.xyz, screen_color.xyz, screen_color.w);

	gl_FragColor = vec4(new_color.xyz, 1.0);

}